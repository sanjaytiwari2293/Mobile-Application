<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sanja.tripbookfinal.UserAccountActivity">

    <Button
        android:text="Get a deal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/buttonGetDeal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:background="?android:attr/colorPressedHighlight" />

    <Button
        android:text="Create Trip"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonGetDeal"
        android:layout_alignStart="@+id/buttonGetDeal"
        android:layout_marginTop="30dp"
        android:id="@+id/buttonCreateTrip"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:background="?android:attr/colorPressedHighlight" />

    <Button
        android:text="Trip List"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCreateTrip"
        android:layout_alignStart="@+id/buttonCreateTrip"
        android:layout_marginTop="36dp"
        android:id="@+id/buttonTripList"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:background="?android:attr/colorPressedHighlight" />

    <Button
        android:text="Wish List"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonTripList"
        android:layout_alignStart="@+id/buttonTripList"
        android:layout_marginTop="37dp"
        android:id="@+id/buttonWishList"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:background="?android:attr/colorPressedHighlight" />

</RelativeLayout>
