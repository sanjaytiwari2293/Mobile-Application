<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:weightSum="1"
    android:layout_columnWeight="1"
    android:foregroundGravity="center"
    android:id="@+id/root_saved_city_layout"
    android:animateLayoutChanges="false"
    android:showDividers="middle">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:text="TextView"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCityCountry"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:layout_weight="0.43"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageButtonVertical"
            android:background="@drawable/star_gray"
            android:scaleType="fitCenter"
            android:layout_gravity="right|center"
            android:layout_marginRight="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:padding="5dp"
            android:weightSum="1"
            android:layout_marginLeft="90dp">

            <TextView
                android:text="TextView"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTempVertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_weight="0.88"
                android:foregroundGravity="center"
                android:gravity="center" />

            <TextView
                android:text="TextView"
                android:layout_width="170dp"
                android:layout_height="36dp"
                android:id="@+id/textViewUpdatedVertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:gravity="center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>